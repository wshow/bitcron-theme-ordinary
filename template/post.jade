extends base

block title
    title= post.title + ' - ' + site.title

block content
	.posts: article
		ul.info
			li
				i.fa.fa-clock-o
				time(datetime= post.date.format('%Y-%m-%d'))= post.date.format('%Y.%m.%d')
			if post.category: li
				i.fa.fa-folder-open-o
				a(href=post.category.url)= post.category.title
			if post.tags: li
				i.fa.fa-tags
				for tag in post.tags
					a.tag(href='/tag/{{tag}}')= tag
			li
				i.fa.fa-eye
				span= (post.visits or 0)
			li
				i.fa.fa-comment-o
				span= (post.comments_count or 0)

		.post
			header
				h2= post.title
			.content= post.content

	.commentslist
		+post.comments_as_html()

	.postpager
		if posts.pre_one
			a.pre(href=posts.previous_one.url)= posts.previous_one.title
		else
			span.pre 
				没有更新的啦！
		if posts.next_one
			a.next(href=posts.next_one.url)= posts.next_one.title
		else
			span.next 
				没有更早的啦！